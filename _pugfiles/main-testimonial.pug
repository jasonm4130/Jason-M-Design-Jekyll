// Testimonial
section#testimonial.section.overlay-1.testimonial.bg-image.dark-bg
  .color-overlay
  .container
    header.section-heading
      h2 Client Testimonials
      span See what our customers have to say about us
    .section-content
      .row
        .col-md-8.col-md-offset-2
          // Wrapper for slides
          .carosel-wrapper
            .client-face-holder
              #clientFace
            .quote.left “
            .quote.right ”
            #testimonials-carousel.owl-carousel
              | {% for testimonial in site.testimonials %}
              .item
                .review(data-client-image='{{testimonial.thumbnail}}')
                  blockquote
                    | {{testimonial.content}}
                  h4.reviewer {{testimonial.title}}
                  p.designation {{testimonial.designation}}
              | {% endfor %}
            // Controls
            .owl-controls
              a.prev(href='', role='button')
                i.ion-ios-arrow-left
                span.sr-only Previous
              a.next(href='', role='button', data-slide='next')
                i.ion-ios-arrow-right
                span.sr-only Next
            // /owl-controls
          // carosel-wrapper
        // /col
      // row
    // section-content
  // container
