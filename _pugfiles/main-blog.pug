// Blog
section#blog.section.blog
  .container
    //
    header.section-heading
      h2 From The Blog
      span Awesome articles from the blog
    //
    #blogContent.section-content
      .row
        | {% for post in site.posts limit: 4%}
        <div class="col-sm-6 col-md-4{% if forloop.last %} visible-sm{% endif %}">
          .blog-post
            header
              h4.date
                | {{post.date | date: '%d'}}
                br
                | {{post.date | date: '%b'}}
              .blog-element
                img.img-responsive(src='{{post.thumbnail}}')
            .blog-content
              h4
                a(href='{{post.url}}') {{post.title}}
              .post-meta
                span
                  | By
                  a(href='//medium.com/@Jason_Matthew') Jason
                span
                  a(href='{{site.baseurl}}{{post.url}}#disqus_thread')
              p {{post.excerpt}} ...
        </div>
        | {% endfor %}
    // /#blogContent
    .text-center
      a#loadBlogPosts.btn.btn-dark(href='/blog')
        | View All
        span.fa.fa-angle-double-right
  // /.container
// Blog
